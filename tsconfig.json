{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "jsx": "preserve",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@api/*": ["apps/api/src/*"],
        "@web/*": ["apps/web/src/*"],
        "@shared/*": ["packages/shared/src/*"]
      },
      "strict": true,
      "noEmit": true,
      "skipLibCheck": true
    },
    "include": ["apps", "packages", "turbo.json", "pnpm-workspace.yaml"]
}
  